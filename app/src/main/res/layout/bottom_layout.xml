<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="#DDDDDD"
        android:id="@+id/id_tab_settings"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
         <ImageView
             android:id="@+id/id_tab_settings_img1"
             android:layout_height="50dp"
             android:layout_width="30dp"
             android:layout_marginLeft="30dp"
             android:src="@drawable/icon1">


         </ImageView>
        <ImageView
            android:id="@+id/id_tab_settings_img2"
            android:layout_height="50dp"
            android:layout_width="30dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/icon2">
        </ImageView>
        <ImageView
            android:id="@+id/id_tab_settings_img3"
            android:layout_height="50dp"
            android:layout_width="30dp"
            android:layout_marginLeft="210dp"
            android:src="@drawable/icon2">
        </ImageView>
        <ImageView
            android:id="@+id/id_tab_settings_img4"
            android:layout_height="50dp"
            android:layout_width="30dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/icon2">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="我的主页"
            android:layout_marginLeft="18dp"
            android:id="@+id/textView10"
            android:layout_alignTop="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="我要下单"
            android:layout_marginLeft="32dp"
            android:id="@+id/textView11"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="我的订单"
            android:layout_marginLeft="123dp"
            android:id="@+id/textView12"

            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="最新活动"
            android:layout_marginLeft="213dp"
            android:id="@+id/textView13"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10" />

    </RelativeLayout>

</RelativeLayout>

